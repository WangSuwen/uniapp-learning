page {
  height: 100vh;
  background: linear-gradient(180deg, #CDE1FF 0%, rgba(205, 225, 255, 0) 100%);
}
.content {
  display: flex;
  position: relative;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.content .login-text {
  margin-top: 56rpx;
  font-family: SF Pro;
  font-size: 44rpx;
  font-weight: 510;
  line-height: 44rpx;
  letter-spacing: 0.4em;
  text-align: center;
}
.content .login-bg {
  width: 100%;
  top: 0;
  position: absolute;
}
.content .form {
  margin-top: 390rpx;
  width: 100%;
  height: 500rpx;
  background-color: purple;
}
